# Use Node 20 alpine for smaller size
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Expose port
EXPOSE 4200

# Run the application in development mode
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--port", "4200"]
